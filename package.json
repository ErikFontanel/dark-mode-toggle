{
  "name": "dark-mode-toggle",
  "version": "0.0.1",
  "description": "Web Component that toggles dark mode ðŸŒ’",
  "main": "index.js",
  "scripts": {
    "lint": "npx eslint './src/*.mjs' --fix && npx stylelint './src/*.mjs' --fix && npx stylelint './demo/*.css' --fix",
    "build": "npx babel './src/dark-mode-toggle.mjs' --presets minify --no-comments --out-file './dist/dark-mode-toggle.min.mjs'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tomayac/dark-mode-toggle.git"
  },
  "keywords": [
    "dark",
    "mode"
  ],
  "author": "Thomas Steiner <steiner.thomas@gmail.com> (https://blog.tomayac.com/)",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/tomayac/dark-mode-toggle/issues"
  },
  "homepage": "https://github.com/tomayac/dark-mode-toggle#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-minify": "^0.5.0",
    "eslint": "^5.16.0",
    "eslint-config-google": "^0.13.0",
    "stylelint": "^10.0.1",
    "stylelint-config-standard": "^18.3.0"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 8,
      "sourceType": "module"
    },
    "extends": [
      "google"
    ],
    "env": {
      "es6": true,
      "browser": true,
      "serviceworker": true,
      "node": true
    },
    "rules": {
      "require-jsdoc": 0
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "selector-type-no-unknown": [
        true,
        {
          "ignore": [
            "custom-elements"
          ]
        }
      ],
      "property-no-unknown": [
        true,
        {
          "ignoreProperties": []
        }
      ]
    }
  }
}
